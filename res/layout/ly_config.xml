<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Act_Config" >

	<TextView
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_marginTop="5dp"
		android:text="@string/txt_btn_cfg"
		android:textSize="17sp"
		android:textStyle="bold" />
		
	<EditText
	    android:id="@+id/txt_new_sm_temp"
	    android:layout_width="155dp"
	    android:layout_height="50dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="65dp"
        android:background="@drawable/block_border"
	    android:inputType="textShortMessage"
	    android:hint="@string/txt_sm_template" />
	
	<Button
	    android:id="@+id/btn_new_sm_temp"
    	android:layout_width="105dp"
		android:layout_height="50dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="175dp"
		android:textSize="15sp"
        android:singleLine="true"
        android:background="@drawable/block_border"
		android:text="@string/txt_sm_add" /> 
		
	
	<Spinner
       	android:id="@+id/spn_select_del_sms"
	    android:layout_width="155dp"
	    android:layout_height="50dp"
       	android:layout_marginTop="130dp"
       	android:layout_marginLeft="10dp"
        android:background="@drawable/block_border"/>
		
		
	<Button
	    android:id="@+id/btn_del_sm_temp"
    	android:layout_width="105dp"
		android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="175dp"
		android:textSize="15sp"
        android:singleLine="true"
        android:background="@drawable/block_border"
		android:text="@string/txt_sm_del" /> 
		
	<EditText
	    android:id="@+id/txt_new_phone_num"
	    android:layout_width="155dp"
	    android:layout_height="50dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="190dp"
		android:background="@drawable/block_border"
	    android:textSize="14sp"
	    android:inputType="phone"/>
	
	<Button
	    android:id="@+id/btn_set_phone"    	
	    android:layout_width="105dp"
		android:layout_height="50dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="175dp"
		android:textSize="15sp"
        android:singleLine="true"
        android:background="@drawable/block_border"
		android:text="@string/txt_set_phone_num" /> 
		
	<Button
	    android:id="@+id/btn_restore"
		android:layout_width="270dp"
		android:layout_height="50dp"
	    android:layout_marginLeft="10dp"
		android:layout_marginTop="260dp"
		android:singleLine="true"
        android:background="@drawable/block_border"
		android:text="@string/txt_restore"
		android:textSize="15sp" />
	
</RelativeLayout>
